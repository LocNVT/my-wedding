# Bật RewriteEngine
RewriteEngine On

# Chặn truy cập trực tiếp vào thư mục assets
RewriteRule ^assets/.*$ - [F,L]

# Tắt listing thư mục
Options -Indexes

# Chặn truy cập file .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Bảo vệ file cấu hình khác
<FilesMatch "\.(env|config|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Cache control cho assets (nếu muốn)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
</IfModule>